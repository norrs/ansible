[Unit]
Description=webserver norrs service
Requires=docker.service nginx-proxy.service
After=docker.service nginx-proxy.service

[Service]
Restart=always

WorkingDirectory=/opt/webserver/norrs.no

ExecStartPre=/bin/sleep 1
ExecStart=/usr/bin/docker compose -f compose.yaml up
ExecStop=/usr/bin/docker compose -f compose.yaml down

[Install]
WantedBy=multi-user.target
